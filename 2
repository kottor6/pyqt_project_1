from PyQt5.QtCore import Qt, pyqtBoundSignal, qWarning
from PyQt5.QtWidgets import QApplication, QWidget, QPushButton, QLabel, QVBoxLayout, QHBoxLayout, QMessageBox, QRadioButton

app = QApplication([])
main_win = QWidget()
main_win.setWindowTitle('Конкурс от Crazy People')

question = QLabel('В каком году канал получил <золотую кнопку> от YouTube?')
btn_answer1 = QPushButton('2005')
btn_answer2 = QPushButton('2010')
btn_answer3 = QPushButton('2015')
btn_answer4 = QPushButton('2020')

layout_main = QVBoxLayout()
layoutH1= QHBoxLayout()
layoutH2= QHBoxLayout()
layoutH3= QHBoxLayout()
layoutH4= QHBoxLayout()
layoutH1.addWidget(question, aligment = Qt.AlignCenter)
layoutH2.addWidget(btn_answer1, aligment = Qt.AlignCenter)
layoutH2.addWidget(btn_answer2, aligment = Qt.AlignCenter)
layoutH3.addWidget(btn_answer3, aligment = Qt.AlignCenter)
layoutH3.addWidget(btn_answer4, aligment = Qt.AlignCenter)

layout_main.addLayout(layoutH1)
layout_main.addLayout(layoutH2)
layout_main.addLayout(layoutH3)
main_win.settLayout(layout_main)

def show_lose():
    victory_win = QMessageBox()
    victory_win.setText('Нет, в 2015 году/n Вы выйграли фирменный плакат')
    victory_win.exec_()
def show_win():
    victory_win = QMessageBox()
    victory_win.setText('Верно!/nВы выйграли гироскутер')
    victory_win.exec_()

btn_answer3.clicked.connect(show_win)
btn_answer1.clicked.connect(show_lose)
btn_answer2.clicked.connect(show_lose)
btn_answer4.clicked.connect(show_lose)

main_win.settLayout(layout_main)
main_win.show()
app.exec_()
